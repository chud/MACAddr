require 'rubygems'
require 'rake'
require 'echoe'

Echoe.new('MACAddr', '0.3.0') do |p|
	p.description = %q{MACAddr is a class for the manipulation of IEEE MAC addresses. 
	It is patterned after the IPAddr class in the Ruby core libs.} 
	p.author = "Raymond P Chudzinski"
	p.email = "ray@chudzinski.net"
	p.url = "http://github.com/chud/MACAddr"
  p.ignore_pattern = ["tmp/*", "script/*"]
  p.development_dependencies = []
end

